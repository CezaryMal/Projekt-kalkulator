{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build (macOS) - g++ (all files)",
            "type": "shell",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-std=c++17",
                "-g",
                "${workspaceFolder}/Projekt kalkulator/main.cpp",
                "${workspaceFolder}/Projekt kalkulator/calc.cpp",
                "${workspaceFolder}/Projekt kalkulator/ui_format.cpp",
                "-o",
                "${workspaceFolder}/Projekt kalkulator/bin/Debug/Projekt kalkulator"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build (macOS) - clang++ (all files)",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-std=c++17",
                "-g",
                "${workspaceFolder}/Projekt kalkulator/main.cpp",
                "${workspaceFolder}/Projekt kalkulator/calc.cpp",
                "${workspaceFolder}/Projekt kalkulator/ui_format.cpp",
                "-o",
                "${workspaceFolder}/Projekt kalkulator/bin/Debug/Projekt kalkulator"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build (Windows) - g++ (mingw)",
            "type": "shell",
            "command": "C:\\Users\\teamV\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}\\Projekt kalkulator\\main.cpp",
                "${workspaceFolder}\\Projekt kalkulator\\calc.cpp",
                "${workspaceFolder}\\Projekt kalkulator\\ui_format.cpp",
                "-o",
                "${workspaceFolder}\\Projekt kalkulator\\bin\\Debug\\Projekt kalkulator.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}\\Projekt kalkulator"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Windows (MinGW) build task"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file (POSIX)",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Adapted for macOS: compiles the active file using system g++."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ kompiluj aktywny plik",
            "command": "/usr/bin/clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debuger."
        }
    ]
}